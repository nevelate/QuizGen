<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:uip="using:FluentAvalonia.UI.Controls.Primitives"
             xmlns:vm="using:QuizGen.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="QuizGen.Views.InputPhonePageView"
             x:DataType="vm:InputPhonePageViewModel">
  <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10">
    <TextBlock Text="Your Phone" Theme="{StaticResource TitleTextBlockStyle}" TextAlignment="Center"/>
    <TextBlock Theme="{StaticResource CaptionTextBlockStyle}" TextAlignment="Center">
      Please confirm your country code<LineBreak/> and enter your phone number
    </TextBlock>
    <!--
    <ui:FAComboBox SelectedIndex="0" HorizontalAlignment="Stretch">
      <ui:FAComboBoxItem>O'zbekiston</ui:FAComboBoxItem>
      <ui:FAComboBoxItem>Россия</ui:FAComboBoxItem>
      <ui:FAComboBoxItem>USA</ui:FAComboBoxItem>
    </ui:FAComboBox>
    -->
    <MaskedTextBox Name="TelephoneBox" HorizontalAlignment="Stretch"/>
    <Button HorizontalAlignment="Center" MinWidth="270" Content="ОК" Classes="accent"
            Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).IdentificateCommand}"
            CommandParameter="{Binding #TelephoneBox.Text}" IsDefault="True"/>
    <!--
    <HyperlinkButton Content="Быстрый вход по QR-коду" HorizontalAlignment="Center"/>
    -->
  </StackPanel>
</UserControl>
